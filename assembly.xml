<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/mavenassembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>GA</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory>lib</outputDirectory>
			<directory>server/target/getty-${project.version}-GA/getty-${project.version}/lib</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>bin</outputDirectory>
			<directory>server/target/getty-${project.version}-GA/getty-${project.version}/bin</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>conf</outputDirectory>
			<directory>server/target/getty-${project.version}-GA/getty-${project.version}/conf</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>logs</outputDirectory>
			<directory>server/target/getty-${project.version}-GA/getty-${project.version}/logs</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>tmp</outputDirectory>
			<directory>server/target/getty-${project.version}-GA/getty-${project.version}/tmp</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>webapps</outputDirectory>
			<directory>server/target/getty-${project.version}-GA/getty-${project.version}/webapps</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>webapps/demo-${project.version}-GA</outputDirectory>
			<directory>demo/target/demo-${project.version}-GA/demo-${project.version}</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>